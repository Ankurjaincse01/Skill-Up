<!-- Interview Journey Modal -->
<div class="modal fade" id="interviewModal" tabindex="-1" aria-labelledby="interviewModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" style="border-radius: 20px; border: none; background: white;">
      <div class="modal-header" style="border-bottom: none; padding: 2rem 2rem 1rem;">
        <h5 class="modal-title fw-bold" id="interviewModalLabel" style="color: #6366f1;">Start a New Interview Journey</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="padding: 1rem 2rem 2rem;">
        <p style="color: #6b7280; margin-bottom: 1.5rem;">Fill out a few quick details and unlock your personalized set of interview questions!</p>
        
        <form id="interviewForm">
          <div class="mb-3">
            <label for="targetRole" class="form-label fw-semibold" style="color: #1f2937; font-size: 0.95rem;">Target Role</label>
            <input type="text" class="form-control interview-input" id="targetRole" placeholder="e.g., QA Engineer" required style="padding: 0.75rem; border-radius: 10px; background: #f3f4f6; border: 1px solid #d1d5db; color: #1f2937; font-size: 0.95rem;">
          </div>
          
          <div class="mb-3">
            <label for="topicsFocus" class="form-label fw-semibold" style="color: #1f2937; font-size: 0.95rem;">Topics to Focus On</label>
            <input type="text" class="form-control interview-input" id="topicsFocus" placeholder="Selenium, TestNG, Automation, API Testing" required style="padding: 0.75rem; border-radius: 10px; background: #f3f4f6; border: 1px solid #d1d5db; color: #1f2937; font-size: 0.95rem;">
          </div>
          
          <div class="mb-4">
            <label for="description" class="form-label fw-semibold" style="color: #1f2937; font-size: 0.95rem;">Description</label>
            <textarea class="form-control interview-input" id="description" rows="3" placeholder="Any specific goals or notes for this session" style="padding: 0.75rem; border-radius: 10px; background: #f3f4f6; border: 1px solid #d1d5db; color: #1f2937; font-size: 0.95rem;"></textarea>
          </div>
          
          <button type="submit" class="btn w-100" style="background: #000; color: white; padding: 1rem; border-radius: 10px; border: none; font-weight: 600; font-size: 1.05rem;">
            Create Session
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
function openInterviewModal(role, skills, experience) {
  document.getElementById('targetRole').value = role;
  document.getElementById('topicsFocus').value = skills;
  document.getElementById('description').value = '';
  
  const modal = new bootstrap.Modal(document.getElementById('interviewModal'));
  modal.show();
}

document.getElementById('interviewForm')?.addEventListener('submit', function(e) {
  e.preventDefault();
  
  const role = document.getElementById('targetRole').value;
  const roleSlug = role.toLowerCase().replace(/\s+/g, '-').replace(/\//g, '-');
  
  // Close modal
  const modal = bootstrap.Modal.getInstance(document.getElementById('interviewModal'));
  modal.hide();
  
  // Redirect to prep-ai for that role
  window.location.href = '/prep-ai/' + roleSlug;
});
</script>

