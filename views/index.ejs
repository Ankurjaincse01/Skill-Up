<%- include('partials/header') %>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark fixed-top">
  <div class="container-fluid px-4">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <div class="logo-icon">
        <i class="fas fa-code"></i>
      </div>
      <span class="ms-2 fw-bold">Skill Up</span>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <button class="btn btn-outline-light me-2" id="loginBtn">Login</button>
        </li>
        <li class="nav-item">
          <button class="btn btn-signup" id="navSignupBtn">Sign Up</button>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Hero Section -->
<section class="hero-section">
  <div class="animated-bg">
    <div class="floating-dots"></div>
  </div>
  
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-10">
        <!-- Main Heading -->
        <h1 class="hero-title mb-4" data-aos="fade-up">
          Transform the Way You Prepare.<br>
          <span class="text-gradient-blue">Faster.</span> 
          <span class="text-gradient-green">Smarter.</span>
          <span class="text-gradient-blue">AI-Powered.</span>
        </h1>
        
        <!-- Subtitle -->
        <p class="hero-subtitle mb-5" data-aos="fade-up" data-aos-delay="100">
          The AI-powered platform for Engineers. Master Coding, System Design,<br>
          and Aptitude in one place.
        </p>
        
        <!-- CTA Button -->
        <div class="mb-5" data-aos="fade-up" data-aos-delay="200">
          <button class="btn btn-cta btn-lg px-5 py-3" id="signupBtn">
            Sign Up for Free
          </button>
        </div>
        
        <!-- Features List -->
        <div class="features-list mb-5" data-aos="fade-up" data-aos-delay="300">
          <div class="row justify-content-center g-4">
            <div class="col-6 col-md-4">
              <div class="feature-item">
                <i class="fas fa-check-circle"></i>
                <span>Coding</span>
              </div>
            </div>
            <div class="col-6 col-md-4">
              <div class="feature-item">
                <i class="fas fa-check-circle"></i>
                <span>Interview Prep</span>
              </div>
            </div>
            <div class="col-6 col-md-4">
              <div class="feature-item">
                <i class="fas fa-check-circle"></i>
                <span>New Age Skills</span>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</section>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title">Welcome Back!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="loginForm">
          <div class="mb-3">
            <label for="loginEmail" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="loginEmail" required>
          </div>
          <div class="mb-3">
            <label for="loginPassword" class="form-label">Password</label>
            <input type="password" class="form-control" id="loginPassword" required>
          </div>
          <div class="mb-3 text-end">
            <a href="#" class="text-decoration-none" style="color: var(--accent-blue); font-size: 0.9rem;">Forgot Password?</a>
          </div>
          <button type="submit" class="btn btn-cta w-100 mb-3">Login</button>
          <p class="text-center text-secondary mb-0">Don't have an account? <a href="#" class="text-decoration-none" style="color: var(--accent-green);" id="switchToSignup">Sign Up</a></p>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Signup Modal -->
<div class="modal fade" id="signupModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title">Create Your Account</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="signupForm">
          <div class="mb-3">
            <label for="name" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="name" required>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="email" required>
          </div>
          <div class="mb-3">
            <label for="phone" class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="phone" placeholder="+1 (555) 000-0000" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" required>
          </div>
          <button type="submit" class="btn btn-cta w-100 mb-3">Create Account</button>
          <p class="text-center text-secondary mb-0">Already have an account? <a href="#" class="text-decoration-none" style="color: var(--accent-blue);" id="switchToLogin">Login</a></p>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
